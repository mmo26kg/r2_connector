# Cloudflare R2 Configuration
# Lấy thông tin này từ Cloudflare Dashboard > R2 > Manage R2 API Tokens

# Account ID của Cloudflare
R2_ACCOUNT_ID=your_account_id_here

# Access Key ID từ R2 API Token
R2_ACCESS_KEY_ID=your_access_key_id_here

# Secret Access Key từ R2 API Token
R2_SECRET_ACCESS_KEY=your_secret_access_key_here

# Tên bucket R2 của bạn
R2_BUCKET_NAME=your_bucket_name_here

# PostgreSQL Database (Optional - cho backup)
# Format: postgresql://username:password@host:port/database
# Example: postgresql://postgres:mypassword@localhost:5432/mydb
DATABASE_URL=postgresql://username:password@host:port/database

# Backup Cronjob Configuration (Optional)
# Cron schedule format: minute hour day month weekday
# Examples:
#   0 2 * * *       = Mỗi ngày lúc 02:00 AM
#   0 */6 * * *     = Mỗi 6 giờ
#   0 0 * * 0       = Mỗi Chủ nhật lúc 00:00
#   */30 * * * *    = Mỗi 30 phút
#   0 0 1 * *       = Ngày đầu tiên mỗi tháng
BACKUP_CRON_SCHEDULE=0 2 * * *

# Timezone cho cronjob (Optional, mặc định Asia/Ho_Chi_Minh)
# Examples: Asia/Ho_Chi_Minh, UTC, America/New_York, Europe/London
BACKUP_TIMEZONE=Asia/Ho_Chi_Minh

# Force sử dụng custom backup method (không cần pg_dump)
# Set = true nếu deploy lên platform không có PostgreSQL client tools (Railway, Heroku, etc.)
USE_CUSTOM_BACKUP=false

# Strapi Configuration (Optional - cho uploadExeFileTad endpoint)
# URL của Strapi CMS instance
STRAPI_URL=https://your-strapi-instance.com

# API Token từ Strapi (Settings > API Tokens)
STRAPI_API_TOKEN=your_strapi_api_token_here
